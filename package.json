{
  "name": "interview-task",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "prebuild": "rm -rf ./dist",
    "build": "tsc -b && vite build",
    "lint": "eslint --ignore-pattern 'node_modules' --ext .js,.ts,.tsx .",
    "check-types": "tsc",
    "prettier": "prettier --ignore-path .eslintignore \"**/*.+(js|json|ts|tsx)\"",
    "format": "yarn prettier -- --write",
    "check-format": "yarn prettier -- --check",
    "validate": "yarn check-types && yarn check-format && yarn lint && yarn build",
    "validate-parallel": "npm-run-all --parallel check-types check-format lint build",
    "test": "jest",
    "test:ci": "jest --ci",
    "test-coverage": "jest --collectCoverage=true",
    "version": "conventional-changelog -p angular -s",
    "test:badges": "yarn test-coverage && jest-coverage-badges --input coverage/coverage-summary.json",
    "test:readme-badges": "yarn test:badges && jest-coverage-badges --input \"coverage/coverage-summary.json\" --output badges",
    "prepublish": "rm -rf dist && tsc",
    "preview": "vite preview",
    "prepare": "husky install",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@hookform/resolvers": "^5.1.1",
    "@mui/icons-material": "^7.1.1",
    "@mui/material": "^7.1.1",
    "@mui/x-data-grid": "^8.5.2",
    "@mui/x-date-pickers": "^8.5.2",
    "@tanstack/react-query": "^5.74.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "date-fns": "^4.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.57.0",
    "zod": "^3.25.62"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.21.0",
    "@faker-js/faker": "^9.6.0",
    "@mswjs/data": "^0.16.2",
    "@testing-library/dom": "^10.4.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "conventional-changelog": "^7.1.0",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "gh-pages": "^6.3.0",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-coverage-badges": "^1.1.2",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.1.0",
    "msw": "^2.10.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0",
    "vite-plugin-checker": "^0.9.1"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  },
  "lint-staged": {
    "*.+(js|ts|tsx)": [
      "eslint"
    ],
    "*.+(js|json|ts|tsx)": [
      "prettier --write",
      "git add"
    ]
  },
  "homepage": "https://laurencestokes.github.io/crud-interview-ls"
}
